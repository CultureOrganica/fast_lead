# Fast Lead Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Application
# ============================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production-use-secrets-token-urlsafe-32
APP_NAME=Fast Lead
APP_VERSION=0.1.0

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://postgres@localhost:5432/fast_lead_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# ============================================
# API Configuration
# ============================================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Authentication & Security
# ============================================
# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true

# ============================================
# Email (SMTP)
# ============================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@fast-lead.ru
SMTP_FROM_NAME=Fast Lead

# Alternative: Postal
# EMAIL_PROVIDER=postal
# POSTAL_API_URL=https://postal.example.com
# POSTAL_API_KEY=your-postal-api-key

# ============================================
# SMS Provider (SMSC.ru)
# ============================================
SMSC_LOGIN=your-smsc-login
SMSC_PASSWORD=your-smsc-password
SMSC_SENDER=FastLead
SMSC_API_URL=https://smsc.ru/sys/send.php

# ============================================
# VK API
# ============================================
VK_ACCESS_TOKEN=your-vk-access-token
VK_API_VERSION=5.131
VK_GROUP_ID=your-vk-group-id

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBHOOK_URL=https://api.fast-lead.ru/webhooks/telegram

# ============================================
# WhatsApp Business API
# ============================================
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ============================================
# MAX Messenger (Russia)
# ============================================
MAX_BOT_TOKEN=your-max-bot-token
MAX_API_URL=https://api.max.ru

# ============================================
# Cal.com Integration
# ============================================
CALCOM_API_KEY=your-calcom-api-key
CALCOM_API_URL=https://api.cal.com/v1
CALCOM_EVENT_TYPE_ID=0
CALCOM_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# Chatwoot Integration
# ============================================
CHATWOOT_API_URL=https://app.chatwoot.com
CHATWOOT_ACCOUNT_ID=your-account-id
CHATWOOT_API_KEY=your-chatwoot-api-key
CHATWOOT_INBOX_ID=your-inbox-id

# ============================================
# Billing (ЮКасса)
# ============================================
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
YOOKASSA_WEBHOOK_SECRET=your-webhook-secret

# Billing (Тинькофф)
TINKOFF_TERMINAL_KEY=your-terminal-key
TINKOFF_SECRET_KEY=your-secret-key

# ============================================
# CDN & Storage
# ============================================
# Cloudflare
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# S3-compatible storage (MinIO, Selectel, VK Cloud)
S3_ENDPOINT_URL=https://s3.example.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=fast-lead-media
S3_REGION=ru-central1

# ============================================
# Monitoring & Logging
# ============================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Celery (Task Queue)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false
CELERY_TASK_EAGER_PROPAGATES=true

# ============================================
# Feature Flags
# ============================================
FEATURE_SMS_ENABLED=true
FEATURE_EMAIL_ENABLED=true
FEATURE_VK_ENABLED=true
FEATURE_TELEGRAM_ENABLED=true
FEATURE_WHATSAPP_ENABLED=false
FEATURE_MAX_ENABLED=false
FEATURE_BILLING_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true
FEATURE_CHATWOOT_ENABLED=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Widget Configuration
# ============================================
WIDGET_CDN_URL=https://cdn.fast-lead.ru
WIDGET_VERSION=1.0.0

# ============================================
# Frontend URLs
# ============================================
FRONTEND_DASHBOARD_URL=http://localhost:3000
FRONTEND_MARKETING_URL=http://localhost:3001
WIDGET_URL=http://localhost:5173
